{
  "name": "Chrome Collections",
  "description": "收集知识片段",
  "version": "1.0.0",
  "icons": {
    "128": "assets/128.png",
    "32": "assets/32.png"
  },
  "page_action": {
    "default_title": "Collections"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "default_locale": "en",
  "permissions": ["storage", "tabs", "declarativeContent", "contextMenus", "<all_urls>"],
  "manifest_version": 2
}
